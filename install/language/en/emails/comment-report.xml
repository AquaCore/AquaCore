<?xml version="1.0" encoding="UTF-8"?>
<languageimport>
  <emailgroup>
    <email key="comment-report">
      <name>Comment Report</name>
      <subject>Comment Report</subject>
      <body><![CDATA[<html>
	<body>
		<div style="font-size: 14px; font-family:lucida sans unicode,lucida grande,sans-serif; color: #7A889E;">
		#user-display-name#,<br>
		<p>A comment by #comment-display-name# to <b><a href="#content-url#">#content-title#</a></b> has just reach a threshold of #threshold# unique reports:</p>
		<div style="border-radius: 5px; border: 1px solid #a3b1c7; padding: 10px 20px; box-shadow: inset 0 1px 3px 0 #a3b1c7;">
		#comment-html#
		</div>
		<p><a href="#comment-url#">Click here to view this comment</a></p>
		</div>
	</body>
</html>]]></body>
      <placeholder key="site-title">Site title</placeholder>
      <placeholder key="site-url">Site URL</placeholder>
      <placeholder key="content-title">Post's title</placeholder>
      <placeholder key="content-url">Post's URL</placeholder>
      <placeholder key="user-username">Recipient's site username</placeholder>
      <placeholder key="user-display-name">Recipient's site display name</placeholder>
      <placeholder key="user-email">Recipient's email address</placeholder>
      <placeholder key="threshold">Recipient's comment report threshold</placeholder>
      <placeholder key="comment-html">Comment's html content</placeholder>
      <placeholder key="comment-bbcode">Comment's bbcode content</placeholder>
      <placeholder key="comment-url">Comment's admin URL</placeholder>
      <placeholder key="comment-display-name">Replier's plain display name</placeholder>
    </email>
  </emailgroup>
</languageimport>
